

<MudCard Class="car" Style="width: 18rem;">
    <MudCardMedia Image="@Car.Imag" Height="200" />
    <MudCardContent>
        <MudText Typo="Typo.h5">@Car.Brand @Car.Model</MudText>
        <MudText Typo="Typo.body2">@Car.Year - @Car.Km km</MudText>
        <MudText Typo="Typo.body2">@Car.Price Price</MudText>
        <MudIconButton Icon="@Icons.Filled.Info" aria-label="View" 
        @onclick="@(async () => await OnSelected.InvokeAsync(Car))"></MudIconButton>
    </MudCardContent>
</MudCard>
<div>
</div>

@code {
    [Parameter, EditorRequired]
    public Car Car { get; set; } = default!;

    [Parameter]
    public EventCallback<Car> OnSelected { get; set; }

}
