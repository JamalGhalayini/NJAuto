@inject HttpClient Http;

<MudCard @onclick="@(async () => await OnSelected.InvokeAsync(Car))" Class="car" Style="width: 18rem; background-color:#333333; color:white;" >
    <MudCardMedia Image="@Car.ImageTitle" Height="200" />
    <MudCardContent>
        <MudText Typo="Typo.h5">@Car.Brand @Car.Model</MudText> 
        <MudText Typo="Typo.body2">Year: @Car.YearModel</MudText>
        <MudText Typo="Typo.body2">Km: @Car.Km</MudText>
        <MudText Typo="Typo.body2">Price: @Car.Price DDk</MudText>
        <AuthorizeView>
        <MudIconButton Icon="@Icons.Filled.DeleteOutline" Title="Delete" Style="margin-left:5px; color:white;" @onclick="@(async () => await DeleteCar.InvokeAsync(Car))" />
       <MudIconButton Icon="@Icons.Filled.Update" Title="update" Style="margin-left:5px; color:white;" @onclick="@(async () => await EditCar.InvokeAsync(Car))" />
        </AuthorizeView>
    </MudCardContent>
</MudCard>


@code {
    [Parameter, EditorRequired]
    public Car Car { get; set; } = default!;
    
    [Parameter]
    public EventCallback<Car> OnSelected { get; set; } 

    [Parameter]
    public EventCallback<Car> DeleteCar { get; set; }

    [Parameter]
    public EventCallback<Car> EditCar { get; set; }

     
}
