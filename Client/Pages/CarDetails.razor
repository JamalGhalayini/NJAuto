<div class="drawer-wrapper @(_isOpen ? "slide" : "")">
    <div class="drawer-mask"></div>
    <div class="drawer">
        @if (_activeCar is not null)
        {
            <div class="drawer-content">
                <img src="@_activeCar.Imag" />
                <div class="trail-details">
                    <h3>@_activeCar.Brand</h3>
                    <h6 class="mb-3 text-muted">
                        <span class="oi oi-map-marker"></span>
                    </h6>
                    <div class="mt-4">
                        <span class="mr-5">
                            <span class="oi oi-clock mr-2"></span>
                            @_activeCar.Model
                        </span>
                        <span>
                            <span class="oi oi-infinity mr-2"></span>
                            @_activeCar.Km km
                        </span>
                    </div>
                    <p class="mt-4">@_activeCar.Description</p>
                </div>
            </div>
            <div class="drawer-controls">
                <button class="btn btn-secondary"
                    @onclick="Close">
                    Close
                </button>
            </div>
        }
    </div>
</div>
@code {
    private bool _isOpen;
    private Car? _activeCar;
    [Parameter, EditorRequired]
    public Car? Car { get; set; }
    protected override void OnParametersSet()
    {
        if (Car != null)
        {
            _activeCar = Car;
            _isOpen = true;
        }
    }
    private void Close()
    {
        _activeCar = null;
        _isOpen = false;
    }
}
